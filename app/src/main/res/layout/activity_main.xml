<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvGasolina"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginTop="152dp"
        android:text="@string/tvValorGasolina"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textColorLink="#4CAF50"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvEtanol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <EditText
        android:id="@+id/etGasolina"
        android:layout_width="210dp"
        android:layout_height="39dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:hint="@string/etValorGasolina"
        android:textColor="#979797"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/etEtanol"
        app:layout_constraintEnd_toEndOf="@+id/tvEtanol"
        app:layout_constraintStart_toStartOf="@+id/tvEtanol"
        app:layout_constraintTop_toBottomOf="@+id/tvGasolina" />

    <EditText
        android:id="@+id/etEtanol"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="@string/etValorEtanol"
        android:textColor="#979797"
        android:textSize="12sp"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="@+id/tvEtanol"
        app:layout_constraintStart_toStartOf="@+id/tvEtanol"
        app:layout_constraintTop_toBottomOf="@+id/tvEtanol" />

    <TextView
        android:id="@+id/tvEtanol"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:layout_marginBottom="424dp"
        android:text="@string/tvValorEtanol"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textColorLink="#4CAF50"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="218dp"
        android:layout_height="58dp"
        android:layout_marginTop="93dp"
        android:textColor="#979797"
        android:textColorLink="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEtanol" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:elevation="@dimen/cardview_default_elevation"
        android:shadowColor="#31ECEC"
        android:text="@string/btnCalcular"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#31ECEC"
        android:textColorHint="#000000"
        android:textColorLink="#31ECEC"
        app:backgroundTint="@android:color/widget_edittext_dark"
        app:layout_constraintBottom_toTopOf="@+id/tvResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEtanol"
        app:rippleColor="#31ECEC"
        app:strokeColor="#31ECEC" />


</androidx.constraintlayout.widget.ConstraintLayout>